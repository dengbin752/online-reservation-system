FROM node:22-alpine

RUN corepack enable

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY packages/ packages/

# Install dependencies in each package
RUN pnpm install --frozen-lockfile

# Expose port
EXPOSE 3000

# Start the application
CMD ["pnpm", "run", "dev:customer"]